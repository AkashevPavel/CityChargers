<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_green_light"
    android:padding="@dimen/list_item_margin">

    <ImageView
        android:id="@+id/charger_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_lock_idle_charging"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/charger_name"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_item_margin"
        app:layout_constraintStart_toEndOf="@id/charger_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Charger"
        />

    <TextView
        android:id="@+id/charger_address"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Some address for charger"
        android:layout_marginTop="@dimen/list_item_margin"
        app:layout_constraintStart_toStartOf="@id/charger_name"
        app:layout_constraintTop_toBottomOf="@id/charger_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>